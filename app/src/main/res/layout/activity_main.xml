<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.martinbuchan.calculator.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPreviousInput"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txtPreviousInput"
        android:layout_width="0dp"
        android:layout_height="19dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="4"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:targetApi="lollipop"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtInput">

        <Button
            android:id="@+id/btnSeven"
            style="@android:style/Widget.Material.Button.Borderless"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_7"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp"
            tools:targetApi="lollipop"
            />

        <Button
            android:id="@+id/btnEight"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_8"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/btnNine"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_9"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp"
            tools:targetApi="lollipop" />

        <Button
            android:id="@+id/btnDivide"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/divide"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnClear"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/cls"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="363dp" />

        <Button
            android:id="@+id/btnFour"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/_4"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnFive"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_5"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnSix"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_6"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnMultiply"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/multiply"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnModulo"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/modulo"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnOne"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/_1"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnTwo"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_2"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnThree"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_3"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnAdd"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/add"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnBlank2"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnDecimal"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:layout_column="0"
            android:layout_row="3"
            android:text="@string/decimal"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnZero"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            android:text="@string/_0"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnBlank"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill_horizontal"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnSubtract"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/subtract"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

        <Button
            android:id="@+id/btnEquals"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/equals"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="335dp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
